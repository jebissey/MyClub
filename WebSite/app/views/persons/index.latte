{layout '../admin/personManager.latte'}

{block title}Personnes{/block}

{block content}
    {include '../common/dataTable.latte',
        'createButton' => [
            'url' => '/persons/create',
            'label' => 'Créer une personne'
        ],
        'columns' => [
            ['field' => 'LastName', 'label' => 'Nom'],
            ['field' => 'FirstName', 'label' => 'Prénom'],
            ['field' => 'Email', 'label' => 'Email'],
            ['field' => 'Phone', 'label' => 'Téléphone']
        ],
        'items' => $persons,
        'actions' => [
            [
                'type' => 'link',
                'label' => 'Éditer',
                'url' => '/persons/edit/{id}',
                'class' => 'btn-warning'
            ],
            [
                'type' => 'link',
                'label' => 'Supprimer',
                'url' => '/persons/delete/{id}',
                'class' => 'btn-danger',
                'confirm' => 'Voulez-vous vraiment supprimer cette personne ?'
            ]
        ]
    }
{/block}