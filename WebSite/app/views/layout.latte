<!DOCTYPE html>
<html lang="fr" class="min-vh-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{block title}{/block}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    {php Tracy\Debugger::renderLoader()}
    <style>
        body {
            position: relative;
        }
        
        main.flex-grow-1 {
            position: relative;
            z-index: 1;
        }
        
        body::before {
            content: "";
            background-image: url('/app/images/logo.png');
            background-repeat: no-repeat;
            background-position: center center;
            background-size: 75%;
            opacity: 0.1;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
        }
        
        nav, footer {
            position: relative;
            z-index: 2;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
<main class="flex-grow-1">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        {block navbar}{/block}
    </nav>

    <div class="container mt-4">
        {block content}{/block}
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script n:syntax="off">
document.addEventListener("DOMContentLoaded", function() {
    var width = screen.width;
    var height = screen.height;
    document.cookie = "screen_resolution=" + width + "x" + height;
});

const alertPlaceholder = document.getElementById('liveAlertPlaceholder');
const appendAlert = (message, type) => {
  const wrapper = document.createElement('div');
  wrapper.innerHTML = [
    `<div class="alert alert-${type} alert-dismissible" role="alert">`,
    `  <div>${message}</div>`,
    '  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
    '</div>'
  ].join('');
  alertPlaceholder.append(wrapper);
};
</script>

<footer class="bg-dark text-white">
    <div class="container">
        <p class="mb-0"><a href ="https://github.com/jebissey/MyClub/releases/tag/V0.1">V0.2</a> &#169; JEB <a href="/legal/notice">Mentions l√©gales</a></p>
    </div>
</footer>
{block scripts}{/block}
</body>
</html>
